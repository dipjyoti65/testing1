
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="35dp"
    android:background="@color/white"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/text_display"
        android:layout_width="310dp"
        android:layout_height="210dp"
        android:layout_marginBottom="16dp"
        android:background="@color/lightgreen"
        android:gravity="end"
        android:textSize="30sp"
        android:padding="15dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="40dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/button_C"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="C"
        android:textSize="35sp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/text_display"/>

    <Button
        android:id="@+id/button_percent"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="%"
        android:textSize="35sp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@id/button_C"
        android:layout_alignTop="@id/button_C"/>

    <Button
        android:id="@+id/backspace"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/baseline_backspace_24"
        android:textSize="35sp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@id/button_percent"
        android:layout_alignTop="@id/button_percent"/>

    <Button
        android:id="@+id/button_divide"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="/"
        android:textSize="35sp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@id/backspace"
        android:layout_alignTop="@id/backspace"/>

    <Button
        android:id="@+id/button_7"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="7"
        android:textSize="35sp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/button_C"
        android:layout_alignStart="@+id/button_C"/>

    <Button
        android:id="@+id/button_8"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="8"
        android:textSize="35sp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/button_percent"
        android:layout_alignStart="@+id/button_percent"/>

    <Button
        android:id="@+id/button_9"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="9"
        android:textSize="35sp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/backspace"
        android:layout_alignStart="@+id/backspace"/>

    <Button
        android:id="@+id/button_multi"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="*"
        android:textSize="35sp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/button_divide"
        android:layout_alignStart="@+id/button_divide"/>

    <Button
        android:id="@+id/button_4"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="4"
        android:textSize="35sp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/button_7"
        android:layout_alignStart="@+id/button_7"/>
    <Button
        android:id="@+id/button_5"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="5"
        android:textSize="35sp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/button_8"
        android:layout_alignStart="@+id/button_8"/>

    <Button
        android:id="@+id/button_6"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="6"
        android:textSize="35sp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/button_9"
        android:layout_alignStart="@+id/button_9"/>

    <Button
        android:id="@+id/button_minus"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="-"
        android:textSize="35sp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/button_multi"
        android:layout_alignStart="@+id/button_multi"/>

    <Button
        android:id="@+id/button_1"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="1"
        android:textSize="35sp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/button_4"
        android:layout_alignStart="@+id/button_4"/>

    <Button
        android:id="@+id/button_2"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="2"
        android:textSize="35sp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/button_5"
        android:layout_alignStart="@+id/button_5"/>

    <Button
        android:id="@+id/button_3"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="3"
        android:textSize="35sp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/button_6"
        android:layout_alignStart="@+id/button_6"/>

    <Button
        android:id="@+id/button_plus"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="+"
        android:textSize="35sp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/button_minus"
        android:layout_alignStart="@+id/button_minus"/>



    <Button
        android:id="@+id/button_0"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:text="0"
        android:textSize="35dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/button_1"
        android:layout_alignStart="@+id/button_1"/>

    <Button
        android:id="@+id/button_dot"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="."
        android:textSize="35dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/button_3"
        android:layout_alignStart="@+id/button_3"/>

    <Button
        android:id="@+id/button_equal"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="="
        android:textSize="35dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/button_plus"
        android:layout_alignStart="@+id/button_plus"/>



</RelativeLayout>
